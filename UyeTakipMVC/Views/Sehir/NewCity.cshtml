@model UyeTakipMVC.Models.SehirClass
@{
    ViewData["Title"] = "NewCity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Şehir Ekle</h1>
<br />
@using (Html.BeginForm("NewCity", "Sehir", FormMethod.Post))
{
    @Html.Label("Şehir Ad")
    @Html.TextBoxFor(x => x.sehir_ad, new { @class = "form-control" })
    <br />
    @Html.Label("Plaka Kodu")
    @Html.TextBoxFor(x => x.plaka_kodu, new { @class = "form-control" })
    <br />
    @Html.Label("Ülke")
    @Html.DropDownListFor(x => x.ulke_id, (List<SelectListItem>)ViewBag.ulke, new { @class = "form-control" })
    <br />
    <button class="btn btn-info" style="background-color:darkblue">Ekle</button>
    <a href="/Sehir/Index">Geri Dön</a>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}